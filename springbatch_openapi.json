{
  "openapi": "3.0.1",
  "info": {
    "title": "Spring Batch REST",
    "version": "0.1",
    "description": "REST API for controlling and viewing <a href=\"https://spring.io/projects/spring-batch\">Spring Batch</a> jobs and their <a href=\"http://www.quartz-scheduler.org\">Quartz</a> schedules.",
    "license": {
      "name": "Apache License 2.0",
      "url": "http://github.com/chrisgleissner/spring-batch-rest/blob/master/LICENSE"
    }
  },
  "servers": [
    {
      "url": "http://localhost:50114",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/jobs/{jobName}": {
      "get": {
        "tags": [
          "job-controller"
        ],
        "summary": "Get a Spring Batch job by name",
        "operationId": "get",
        "parameters": [
          {
            "name": "jobName",
            "in": "path",
            "required": true,
            "example": "abc",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "application/hal+json": {
                "schema": {
                  "$ref": "#/components/schemas/JobResource"
                }
              }
            }
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "tags": [
          "job-controller"
        ],
        "summary": "Get all Spring Batch jobs",
        "operationId": "all",
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "application/hal+json": {
                "schema": {
                  "$ref": "#/components/schemas/CollectionModelJobResource"
                }
              }
            }
          }
        }
      }
    },
    "/jobExecutions/{id}": {
      "get": {
        "tags": [
          "job-execution-controller"
        ],
        "summary": "Get all Spring batch job execution by ID",
        "operationId": "get_1",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "example": 123,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "application/hal+json": {
                "schema": {
                  "$ref": "#/components/schemas/JobExecutionResource"
                }
              }
            }
          }
        }
      }
    },
    "/jobExecutions": {
      "get": {
        "tags": [
          "job-execution-controller"
        ],
        "summary": "Find Spring batch job executions by job name and exit code",
        "operationId": "all_1",
        "parameters": [
          {
            "name": "jobName",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "exitCode",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limitPerJob",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "application/hal+json": {
                "schema": {
                  "$ref": "#/components/schemas/CollectionModelJobExecutionResource"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "job-execution-controller"
        ],
        "summary": "Start a Spring Batch job execution",
        "operationId": "put",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobConfig"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "application/hal+json": {
                "schema": {
                  "$ref": "#/components/schemas/JobExecutionResource"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Job": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "JobResource": {
        "type": "object",
        "properties": {
          "job": {
            "$ref": "#/components/schemas/Job"
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "Link": {
        "type": "object",
        "properties": {
          "rel": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "hreflang": {
            "type": "string"
          },
          "media": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "deprecation": {
            "type": "string"
          },
          "profile": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CollectionModelJobResource": {
        "type": "object",
        "properties": {
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          },
          "content": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JobResource"
            }
          }
        }
      },
      "JobExecution": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "jobId": {
            "type": "integer",
            "format": "int64"
          },
          "jobName": {
            "type": "string"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time"
          },
          "exitCode": {
            "type": "string"
          },
          "exitDescription": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "COMPLETED",
              "STARTING",
              "STARTED",
              "STOPPING",
              "STOPPED",
              "FAILED",
              "ABANDONED",
              "UNKNOWN"
            ]
          },
          "exceptions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "JobExecutionResource": {
        "type": "object",
        "properties": {
          "jobExecution": {
            "$ref": "#/components/schemas/JobExecution"
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "JobConfig": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "properties": {
            "type": "object",
            "additionalProperties": {
              "type": "object"
            }
          },
          "asynchronous": {
            "type": "boolean"
          }
        }
      },
      "CollectionModelJobExecutionResource": {
        "type": "object",
        "properties": {
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          },
          "content": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JobExecutionResource"
            }
          }
        }
      }
    }
  }
}